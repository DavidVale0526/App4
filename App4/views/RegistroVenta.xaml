<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.views.RegistroVenta"
             Title="RegistroVenta"
             BackgroundColor="White">
    <StackLayout Padding="20">
        <Label Text="Registro de Venta" FontSize="24" FontAttributes="Bold" TextColor="Black"/>
        <Entry Placeholder="Nombre del producto" PlaceholderColor="Gray"/>
        <Entry Placeholder="Cantidad" PlaceholderColor="Gray"/>
        <Entry Placeholder="Precio" PlaceholderColor="Gray"/>
        <Button Text="Registrar" BackgroundColor="#8A2BE2" TextColor="White" CornerRadius="5"/>
    </StackLayout>
</ContentPage>