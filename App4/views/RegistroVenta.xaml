<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.views.RegistroVenta"
             Title="RegistroVenta"
             BackgroundColor="White">
    <StackLayout Padding="10">
        <Label Text="Nombre del Producto"/>
        <Entry x:Name="nombreProductoEntry" Placeholder="Nombre del producto"/>

        <Label Text="Cantidad"/>
        <Entry x:Name="cantidadEntry" Placeholder="Cantidad" Keyboard="Numeric"/>

        <Label Text="Precio"/>
        <Entry x:Name="precioEntry" Placeholder="Precio" Keyboard="Numeric"/>

        <Label Text="Fecha"/>
        <Label x:Name="fechaLabel" Text="Fecha de la venta"/>

       

        <Button Text="Enviar" Clicked="BtnEnviar_Clicked"/>
    </StackLayout>
</ContentPage>