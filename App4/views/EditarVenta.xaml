<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.views.EditarVenta"
             Title="Editar Venta"
             BackgroundColor="White">
    <StackLayout Padding="10">
        <Label Text="Nombre del Producto"/>
        <Entry x:Name="nombreProductoEntry" Placeholder="Nombre del producto" TextColor="Black"/>

        <Label Text="Cantidad"/>
        <Entry x:Name="cantidadEntry" Placeholder="Cantidad" Keyboard="Numeric" TextColor="Black"/>

        <Label Text="Precio"/>
        <Entry x:Name="precioEntry" Placeholder="Precio" Keyboard="Numeric" TextColor="Black"/>

        <Button Text="Actualizar" Clicked="BtnActualizar_Clicked"/>
        <Button Text="Eliminar" Clicked="BtnEliminar_Clicked" BackgroundColor="Red" TextColor="White"/>
    </StackLayout>
</ContentPage>