<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.views.Proveedor"
             Title="Registrar Proveedor"
             BackgroundColor="White">
    <StackLayout Padding="20">
        <Label Text="Registrar Proveedor" FontSize="24" HorizontalOptions="Center" />

        <Frame BackgroundColor="#FFF0F5" CornerRadius="10" Padding="20">
            <Grid ColumnDefinitions="*,Auto">
                <StackLayout Grid.Column="0" Spacing="10">
                    <Label Text="Datos del Proveedor" TextColor="#8A2BE2" FontSize="18" FontAttributes="Bold"/>
                    <Entry x:Name="nombreEntry" Placeholder="Nombre" TextColor="Black"/>
                    <Entry x:Name="empresaEntry" Placeholder="Empresa" TextColor="Black"/>
                    <Entry x:Name="contactoEntry" Placeholder="Contacto" TextColor="Black"/>
                </StackLayout>
                <Image Grid.Column="1" Source="proveedor_icon.png" WidthRequest="50" HeightRequest="50"/>
            </Grid>
        </Frame>

        <Button Text="Agregar Proveedor" BackgroundColor="#8A2BE2" TextColor="White" CornerRadius="5" Clicked="OnAgregarProveedorClicked"/>
    </StackLayout>
</ContentPage>